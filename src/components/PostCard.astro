---
interface Props {
  category: 'rybarina' | 'stripky' | 'nazory';
  title: string;
  excerpt: string;
  date: Date;
  readTime: string;
  image: string;
  href?: string;
}

const { category, title, excerpt, date, readTime, image, href = '#' } = Astro.props;

const categoryLabel =
  category === 'rybarina' ? 'Rybařina' : category === 'stripky' ? 'Střípky' : 'Názory';

const categoryClass =
  category === 'rybarina'
    ? 'bg-emerald-100 text-emerald-900'
    : category === 'stripky'
      ? 'bg-amber-100 text-amber-900'
      : 'bg-rose-100 text-rose-900';
---

<article class="overflow-hidden rounded-card border border-border bg-card shadow-soft">
  <a href={href} class="block">
    <img src={image} alt={title} class="h-52 w-full object-cover" loading="lazy" />
    <div class="space-y-4 p-5">
      <span class:list={['inline-flex rounded-full px-3 py-1 text-sm font-semibold', categoryClass]}>
        {categoryLabel}
      </span>
      <h3 class="font-heading text-4xl leading-tight text-text">{title}</h3>
      <p class="text-lg text-muted">{excerpt}</p>
      <div class="flex items-center gap-3 text-base text-muted">
        <span>{date.toLocaleDateString('cs-CZ')}</span>
        <span aria-hidden="true">•</span>
        <span>{readTime}</span>
      </div>
    </div>
  </a>
</article>
